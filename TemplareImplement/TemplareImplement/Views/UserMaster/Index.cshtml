@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
<link href="~/Scripts/jtable/themes/metro/darkgray/jtable.css" rel="stylesheet" />
<link href="~/css/validationEngine.jquery.css" rel="stylesheet" type="text/css" />
<link href="~/Scripts/jtable/themes/redmond/jquery-ui-1.8.16.custom.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.js"></script>
<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="font-weight-bold mb-0">Manage User</h4>
                <input type="text" placeholder="Search.." id="txtSearch" />
            </div>
            <div>
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Manage User</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="row">
                <div id="tbluserMaster"></div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('#txtSearch').on('input', function (e) {
        //$('#tbluserMaster').jtable('reload');
        e.preventDefault();
        $('#tbluserMaster').jtable('load', {
            searchText: $('#txtSearch').val()
        });
    });
    $(document).ready(function () {
        $('#tbluserMaster').jtable({
            title: 'User Master',
            paging: true,
            pageSize: 5,
            sorting: true,
            defaultSorting: 'UserID DESC',
            pageSizes: [5, 10, 25, 50, 100],
            actions:
            {
                listAction: 'UserMaster/GetDetails',
                createAction: 'UserMaster/Create',
                updateAction: 'UserMaster/Edit',
                deleteAction: 'UserMaster/Delete',
            },
            fields: {
                UserID: { key: true, list: false },
                FirstName: { title: 'First Name', inputClass: 'validate[required]', width: '20%' },
                LastNamme: { title: 'Last Name', width: '25%', inputClass: 'validate[required]' },
                EmailId: { title: 'Email', width: '25%', inputClass: 'validate[required]' },
                UserAddress: { title: 'Adddress', width: '25%', inputClass: 'validate[required]' },
                DateofBirth: { title: 'DOB', width: '15%' }
            }
        });
        $('#tbluserMaster').jtable('reload');
    });
</script>
@section scripts{
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js" integrity="sha256-xH4q8N0pEzrZMaRmd7gQVcTZiFei+HfRTBPJ1OGXC0k=" crossorigin="anonymous"></script>
    <script src="~/Scripts/jtable/jquery.jtable.js"></script>
    <script src="~/Scripts/jquery.validationEngine.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validationEngine-en.js"></script>
}